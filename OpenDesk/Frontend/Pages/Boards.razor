@page "/boards/{workspaceId:int}"
@using Shared.Models

<h3>Boards</h3>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @if (boards != null)
                {
                    foreach (BoardDto board in boards)
                    {
                        <tr @onclick="() => NavigateToCards(board.Id)">
                            <td>@board.Id</td>
                            <td>@board.Name</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>