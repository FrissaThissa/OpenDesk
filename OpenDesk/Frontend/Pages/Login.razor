@page "/login"

@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="loginRequest" OnValidSubmit="PostLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="loginRequest.Email" />
        <ValidationMessage For="@(() => loginRequest.Email)" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="loginRequest.Password" />
        <ValidationMessage For="@(() => loginRequest.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    @if (!string.IsNullOrEmpty(loginRequest.ErrorMessage))
    {
        <div class="alert alert-danger mt-3" role="alert">
            @loginRequest.ErrorMessage
        </div>
    }
</EditForm>