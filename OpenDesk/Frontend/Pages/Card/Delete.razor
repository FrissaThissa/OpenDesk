@page "/card/delete/{cardId:int}"

@using Microsoft.AspNetCore.Components.Forms;

@if (cardDto != null)
{
    <EditForm Model="cardDto" OnValidSubmit="DeleteCard">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div>
            Are you sure you want to delete card @cardDto.Title?
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
    </EditForm>
}
else
{
    <p>Loading...</p>
}