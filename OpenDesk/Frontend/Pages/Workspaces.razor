@using Shared.Models;

@page "/Workspaces"

<h3>Workspaces</h3>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (workspaces != null)
                    {
                        foreach (Workspace workspace in workspaces)
                        {
                            <tr>
                                <td>@workspace.Id</td>
                                <td>@workspace.Name</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>