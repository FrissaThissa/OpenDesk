@page "/board/add/{workspaceId:int}"

@using Microsoft.AspNetCore.Components.Forms;

<EditForm Model="boardDto" OnValidSubmit="PostBoard">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name</label>
        <InputText id="name" class="form-control" @bind-Value="boardDto.Name" />
        <ValidationMessage For="@(() => boardDto.Name)" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>