@page "/cards/{boardId:int}"
@using Shared.Models

<h3>Cards</h3>

<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @if (cards != null)
                {
                    foreach (CardDto card in cards)
                    {
                        <tr>
                            <td>@card.Id</td>
                            <td>@card.Title</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>